upstream hello_app_server {

server unix:/root/JozzAc/jozzAC/jozzAC.sock fail_timeout=0;
}

server {
    listen 80;
    server_name jozacsurabaya.com;

    client_max_body_size 4G;
    access_log /root/JozzAc/jozzAC/logs/nginx-access.log;
    error_log /root/JozzAc/jozzAC/logs/nginx-error.log;
    location /static/ {
        alias /root/JozzAc/jozzAC/static/;
    }
    location /media/ {
        alias /root/JozzAc/jozzAC/media/;
    }

    location / {
        include proxy_params;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://unix:/root/JozzAc/jozzAC/jozzAC.sock;
    }
}