server {
    listen 80;
    server_name jozacsurabaya.com;
    error_log /root/demo/var/logs/nginx.error.log warn;
    access_log /root/demo/var/logs/nginx.access.log;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/static/;
    }

    location /media/ {
        root /home/static/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://jozacsurabaya.com;
    }
}